extends layout

block title
  title Управление пользователями

block content
  h1.mb-4 Пользователи
  #usersContainer

  //- Модальное окно редактирования пользователя
  div#editUserModal.modal.fade(tabindex="-1" aria-hidden="true")
    .modal-dialog
      .modal-content
        .modal-header
          h5.modal-title Редактирование пользователя
          button.btn-close(type="button" data-bs-dismiss="modal" aria-label="Close")
        .modal-body
          form
            input#editUserId(type="hidden")
            .mb-3
              label.form-label(for="editUserName") Имя
              input#editUserName.form-control(type="text")
            .mb-3
              label.form-label(for="editUserRole") Роль
              select#editUserRole.form-select
                option(value="user") Пользователь
                option(value="admin") Администратор
            .mb-3
              label.form-label(for="editUserStatus") Статус
              select#editUserStatus.form-select
                option(value="active") Активный
                option(value="blocked") Заблокирован
                option(value="unconfirmed") Не подтверждён

block templates
  template#userCardTemplate
    .card.mb-3.p-3
      img.user-avatar.mb-2(src="" alt="Avatar" width="60" height="60")
      h5.user-name.mb-1
      p.mb-1
        strong email: 
        span.user-email
      p.mb-1
        strong Дата рождения: 
        span.user-birthdate
      p.mb-1
        strong Роль: 
        span.user-role
      p.mb-1
        strong Статус: 
        span.user-status
      .d-flex.gap-2.mt-2
        button.btn.btn-outline-primary.btn-sm.user-edit-btn Редактировать
        button.btn.btn-outline-info.btn-sm.user-friends-btn Друзья
        button.btn.btn-outline-secondary.btn-sm.user-messages-btn Сообщения

block scripts
  script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js")
  script(src="js/users.js")

